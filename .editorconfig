# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[abc/**.abc]
indent_style = tab
indent_size = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
